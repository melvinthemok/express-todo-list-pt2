<div class="container">
  <h1>Here are your pending todos:</h1><br>
  <ul class="list-group">
    <% itemsList.forEach((item) => { %>
      <li style="text-align:center" class="list-group-item"><span class="badge pull-left"><%= item._id %></span><%= item.name %><form method="post" action="/todos/<%= item._id %>?_method=DELETE"><button style="margin-top:-20px" class="btn btn-xs btn-danger pull-right" type="submit"><span class="glyphicon glyphicon-remove"></span></button></form></li>
    <% }) %>
  </ul>
</div>
