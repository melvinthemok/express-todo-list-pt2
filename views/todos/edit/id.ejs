<div class="container">
  <h1>Please enter the new details of your todo:</h1><br>
  <form class="form-horizontal" method="post" action="/todos/<%= item._id %>?_method=PUT">
    <div class="form-group">
      <label class="col-sm-2" for="name">Name</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="name" name="name" value="<%= item.name %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2" for="description">Description</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="description" name="description" value="<%= item.description %>">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2" for="completed">Completed</label>
      <div class="col-sm-10">

        <%
        let whetherFalse = ""
        let whetherTrue = ""
        if (item.completed === true) {
          whetherTrue = "checked"
        } else if (item.completed === false) {
          whetherFalse = "checked"
        }
        %>

        <input type="radio" <%= whetherFalse %> id="falseCompleted" name="completed" value = false> False<br>
        <input type="radio" <%= whetherTrue %> id="trueCompleted" name="completed" value = true> True<br>
      </div>
    </div>
    <div class="button">
      <button class="btn btn-md btn-primary" type="submit">Update your todo</button>
    </div>
  </form>
</div>
