<div class="container">
  <h1>Please enter the details of your new todo:</h1><br>
  <form class="form-horizontal" action="/todos" method="post">
    <div class="form-group">
      <label class="col-sm-2" for="name">Name</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="name" name="name">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2" for="description">Description</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="description" name="description">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2" for="completed">Completed</label>
      <div class="col-sm-10">
        <input type="radio" id="completed" name="completed" value="false"> False<br>
        <input type="radio" id="completed" name="completed" value="true"> True<br>
      </div>
    </div>
    <div class="button">
      <button class="btn btn-md btn-primary" type="submit">Add to todos</button>
    </div>
  </form>
</div>
